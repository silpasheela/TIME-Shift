<%- include ('../layouts/adminHeader.ejs') %>



    <h4 class="text-center text-dark my-5"><b><u>CATEGORIES</u></b></h4>

  <div>
    <a href="/admin/addCategories"><button type="button" class="btn btn-primary mx-3" style="float: left;">+ Add Categories</button></a>
    <a href="/admin/addCategoryOffer"><button type="button" class="btn btn-primary" style="float: right; margin-right: 15px;">+ Add Offer</button></a>
  </div>


    <table class="table text-center">
      <thead>
        <tr>
          <th scope="col">SL NO</th>
          <th scope="col">CATEGORY NAME</th>
          <th scope="col">OFFER PERCENTAGE</th>
          <th scope="col">START DATE</th>
          <th scope="col">END DATE</th>
          <th scope="col">ACTIONS</th>
        </tr>
      </thead>
      <tbody>

        <% for(i=1;i<=category.length;i++){ %>
          <tr>
            <td>
              <%=i%>
            </td>
            <td><%=category[i-1].name%></td>
            <td><%=category[i-1].discountPercentage %></td>
            <td><%=category[i-1].startDate ? category[i-1].startDate.toLocaleDateString("en-GB") : "" %></td>
            <td><%=category[i-1].endDate ? category[i-1].endDate.toLocaleDateString("en-GB") : "" %></td>
            <td>
              <a href="/admin/edit-category?id=<%- category[i-1]._id %>"><button type="button"
                class="btn btn-success">Edit</button></a>

                <a id="<%-category[i-1]._id %>" style="text-decoration: none; color: #d15858;"
                  href="/admin/delete-category?id=<%- category[i-1]._id %>">
                  <% if(category[i-1].is_available){ %>Unlist<%}else{%>list<%}%>
                </a>
              
            </td>
          </tr>
          <%}%>
      </tbody>
    </table>
